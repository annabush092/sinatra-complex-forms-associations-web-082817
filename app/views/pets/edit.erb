<h1>Update Pet</h1>

<form method='post' action='/pets/<%=@pet.id%>'>
  <p>Pet name: <input type='text' name='pet[name]' value='<%=@pet.name%>' id='pet_name'></p>

  <p>Choose one owner: </p>
  <%Owner.all.each do |owner|%>
    <input type='radio' name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner_id==owner.id %>><%=owner.name%></input></br>
  <%end%>
  <br></br>

  <p>or, create new owner: </p>
  <input type="text" name="owner[name]" id="owner_name"><br>

  <button type='submit'>Update Pet</button>
</form>
